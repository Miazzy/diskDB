{
    "name": "diskdb",
    "version": "0.2.0",
    "description": "disk-db",
    "repository": "https://github.com/arvindr21/diskdb",
    "license": "MIT",
    "author": {
        "name": "Arvind Ravulavaru",
        "email": "arvind.ravulavaru@gmail.com",
        "url": "https://github.com/arvindr21/diskdb"
    },
    "main": "build/index",
    "types": "build/index",
    "files": [
        "build"
    ],
    "scripts": {
        "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
        "build": "DEBUG=diskdb tsc --pretty",
        "clean": "rimraf build && rimraf coverage",
        "coverage": "jest --coverage",
        "docs": "typedoc",
        "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
        "lint": "tslint --fix --force --format verbose \"src/**/*.ts\"",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "watch": "npm run build -- --watch",
        "watch:test": "jest --watch"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/src/**"
        ],
        "coveragePathIgnorePatterns": [
            ".history/",
            "package.json",
            "package-lock.json",
            "tslint.json"
        ],
        "coverageReporters": [
            "html",
            "text",
            "lcov"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 50,
                "lines": 50,
                "statements": 50
            }
        },
        "notify": false,
        "preset": "ts-jest",
        "reporters": [
            [
                "jest-stare",
                {
                    "reportTitle": "DiskDB Unit Test Report",
                    "resultDir": "./coverage",
                    "coverageLink": "lcov-report/index.html",
                    "hideTodos": true
                }
            ]
        ],
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            ".history/"
        ],
        "verbose": false
    },
    "dependencies": {
        "async": "^3.2.0",
        "debug": "^4.2.0",
        "graceful-fs": "^4.2.4",
        "jest-stare": "^2.2.0",
        "msgpack5": "^4.2.1",
        "nanoid": "^3.1.12"
    },
    "devDependencies": {
        "@types/async": "^3.2.3",
        "@types/msgpack5": "^3.4.1",
        "@types/debug": "^4.1.5",
        "@types/graceful-fs": "^4.1.3",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.2",
        "coveralls": "^3.0.2",
        "handlebars": "^4.5.0",
        "jest": "^26.4.2",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.0",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.15.0",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3"
    },
    "engines": {
        "node": ">=10.0.0"
    }
}