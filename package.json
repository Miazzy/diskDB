{
    "name": "diskdb",
    "version": "0.2.0",
    "description": "disk-db",
    "repository": "https://github.com/arvindr21/diskdb",
    "license": "MIT",
    "author": {
        "name": "Arvind Ravulavaru",
        "email": "arvind.ravulavaru@gmail.com",
        "url": "https://github.com/arvindr21/diskdb"
    },
    "main": "build/index",
    "types": "build/index",
    "files": [
        "build"
    ],
    "scripts": {
        "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
        "build": "DEBUG=diskdb tsc --pretty",
        "clean": "rimraf build && rimraf coverage",
        "coverage": "jest --coverage",
        "format": "prettier --fix --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
        "lint": "tslint --fix --force --format verbose \"src/**/*.ts\"",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "watch": "npm run build -- --watch",
        "watch:test": "jest --watch"
    },
    "jest": {
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
            ".history/",
            "package.json",
            "package-lock.json"
        ],
        "coverageReporters": [
            "json",
            "html",
            "lcovonly",
            "text"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 50,
                "lines": 50,
                "statements": 50
            }
        },
        "notify": false,
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            ".history/"
        ],
        "verbose": false
    },
    "dependencies": {
        "async": "^3.2.0",
        "debug": "^4.2.0",
        "graceful-fs": "^4.2.4",
        "nanoid": "^3.1.12"
    },
    "devDependencies": {
        "@types/async": "^3.2.3",
        "@types/debug": "^4.1.5",
        "@types/graceful-fs": "^4.1.3",
        "@types/jest": "^23.3.3",
        "@types/node": "^10.11.4",
        "coveralls": "^3.0.2",
        "jest": "^23.6.0",
        "prettier": "^1.14.3",
        "rimraf": "^2.6.2",
        "ts-jest": "^23.10.3",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "typescript": "^3.1.1"
    },
    "engines": {
        "node": ">=10.0.0"
    }
}